<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetails">

    <LinearLayout
        android:id="@+id/linearlayoutOD"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgback"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/leftchevron1"
            >
        </ImageView>
        <TextView
            android:id="@+id/textViewlc1"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:text="24/7 HEALTH CARE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
         >
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewlc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Order Details"
        android:textColor="@color/white"
        android:background="@drawable/title"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayoutOD">

    </TextView>

    <ListView
        android:id="@+id/listViewod"
        android:layout_width="369dp"
        android:layout_height="450dp"
        android:layout_marginTop="60dp"
        android:dividerHeight="5sp"
        android:divider="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewlc2">
    </ListView>

    <!--<Button
        android:id="@+id/btnbackod"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/title"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewod"></Button>-->
</androidx.constraintlayout.widget.ConstraintLayout>